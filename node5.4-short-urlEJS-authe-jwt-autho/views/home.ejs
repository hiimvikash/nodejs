<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        *{
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        } 
        .main{
            width: fit-content;
            margin: auto;
        }
        form{
            margin-bottom: 2em;
        }
        input{
            padding: 0.5em;
            font-size: large;
            width: 300px;
            border-radius: 20px;
            outline: none;
            border-color: rgba(161, 161, 161, 0.588);
        }
        button{
            padding: 0.42em;
            font-size: larger;
            border: none;
            outline: none;
            background-color: rgb(119, 119, 119);
            color: aliceblue;
            border-radius: 12px;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <div class="main">
    <h1 style="text-align: center;">URL Shortener</h1>
    <form method="post" action="/url">
        <label>Enter Your Original URL</label>
        <input type="text" placeholder="https://www.example.com" name="url">
        <button type="submit">Generate</button>
    </form>


   <% if (locals.shortId) { %>
    <p>URL Generated : localhost:8000/url/<%=locals.shortId%></p>
   <% } %>

   <% if (locals.urls) { %>
    <div>
        <table>
            <thead>
                <th>S. No</th>
                <th>ShortID</th>
                <th>Redirect</th>
                <th>Clicks</th>
                <th>Created By</th>
            </thead>
            <tbody>
                <% urls.forEach((url, index) =>{ %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.originalUrl %></td>
                    <td><%= url.visitHistory.length %></td>
                    <td><%= url.createdBy %></td>
                </tr>
                <% } ) %>
            </tbody>
        </table>
    </div>

   <% } %>
   <h2 style="text-align: center;">Your URL : localhost:8000/url/{shortID}</h2>
</div>
     
</body>
</html>