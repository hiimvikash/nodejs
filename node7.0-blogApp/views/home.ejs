<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        .containers{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 200px));
            grid-gap : 150px 110px;
            grid-auto-rows: 150px;
        }
        .card-body{
            display: flex;
            flex-direction: column;
            align-items:stretch;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %> 
    <div class="containers mt-5">
        <% blogs.forEach(blog => { %>
            <div class="card mt-3" style="width: 18rem; height: 18rem;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                <div class="buttons">
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                  <a href="/blog/delete/<%= blog._id %>" class="btn btn-primary">Delete</a>
                </div>
                </div>
              </div>
        <% }) %>
    </div>
    <%- include('./partials/script') %> 
</body>
</html>